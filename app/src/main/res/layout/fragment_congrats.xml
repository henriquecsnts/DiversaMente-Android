<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongratsFragment"
    android:background="@drawable/background_alert_dialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/congratsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parab_ns"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/congratsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editar_mensagem"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/congratsTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>